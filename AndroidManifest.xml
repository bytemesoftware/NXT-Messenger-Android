<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.bytemesoftware.nxtmessenger"
      android:versionCode="1"
      android:versionName="1.0" 
      android:installLocation="auto">
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
	<uses-permission android:name="android.permission.BLUETOOTH" /> 
	<!-- AdMob SDK requires Internet permission -->
	<uses-permission android:name="android.permission.INTERNET" />
	
	      
    <application android:icon="@drawable/nxtlogo" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".Main"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        	<activity android:name=".DeviceListActivity"
                  android:label="@string/select_device"
                  android:theme="@android:style/Theme.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
            <activity android:name=".SendActivity"
                  android:label="Send"
                  android:theme="@android:style/Theme.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
         <meta-data android:value="a14d767a14ef873" android:name="ADMOB_PUBLISHER_ID" />
         <activity android:name="com.admob.android.ads.AdMobActivity"
					android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
					android:configChanges="orientation|keyboard|keyboardHidden" />
			<!-- Track Market installs -->
			<receiver android:name="com.admob.android.ads.analytics.InstallReceiver"
			android:exported="true">
			<intent-filter>
			<action android:name="com.android.vending.INSTALL_REFERRER" />
			</intent-filter>
			<meta-data android:value="true" android:name="ADMOB_ALLOW_LOCATION_FOR_ADS"
/>
			
</receiver>
					
         

    </application>


<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"></uses-sdk>
</manifest> 